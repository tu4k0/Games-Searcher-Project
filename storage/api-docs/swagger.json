{
    "openapi": "3.0.3",
    "info": {
        "title": "Swagger - Games-Searcher",
        "description": "Api documentation for Games-Searcher Laravel project",
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://localhost:8080/api/"
        }
    ],
    "tags": [
        {
            "name": "Game",
            "description": "Information about game"
        }
    ],
    "paths": {
        "/games/{id}": {
            "get": {
                "tags": [
                    "Game"
                ],
                "summary": "Find game by ID",
                "description": "Returns a single game",
                "operationId": "getGameById",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID of game to return",
                        "required": true,
                        "schema": {
                            "type": "integer",
                            "format": "int64"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Game was fetched successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Game"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Invalid ID supplied"
                    },
                    "404": {
                        "description": "Game not found"
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "Game": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 4
                    },
                    "name": {
                        "type": "string",
                        "example": "Minecraft"
                    },
                    "category_id": {
                        "type": "integer",
                        "example": 1
                    },
                    "genre_id": {
                        "type": "integer",
                        "example": 2
                    },
                    "rating": {
                        "type": "number",
                        "example": 10.5
                    },
                    "summary": {
                        "type": "string",
                        "example": "Top game for kids"
                    },
                    "first_release_date": {
                        "type": "string",
                        "example": "2022-01-12"
                    }
                },
                "required": [
                    "id",
                    "name",
                    "category_id",
                    "genre_id",
                    "rating",
                    "summary",
                    "first_release_date"
                ]
            }
        }
    }
}
